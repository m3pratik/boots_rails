<h1>Create Comment</h1>
<%= @pidd %>
<table>
  <%= form_for @comment do |t| %>
  <% if @comment.errors.any? %>
  <h2> Errors: </h2>
  <ul>
      <% @comment.errors.full_messages.each do |err| %>
        <li><%= err %></li>
      <% end %>
  </ul>
  <% end %>
  <tr>
    <td><%=t.label("Name : ")%></td>
    <td><%=t.text_field :name %></td>
  </tr>

    <tr>
      <td><%=t.label("Content : ")%></td>
      <td><%=t.text_area :content %></td>
    </tr>
      <tr>
  <%= t.hidden_field :post_id, :value => params[:id] %>
      <td><%=t.submit %></td>
    </tr>



<%end%>

</table>

<%= link_to "Back", posts_path %>
<%= button_to 'Add Class', posts_path, class: "btn btn-primary"%>
