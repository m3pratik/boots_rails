<h1>Create Post</h1>
<table>
  <%= form_for @post do |t| %>
  <% if @post.errors.any? %>
  <h2> Errors: </h2>
  <ul>
      <% @post.errors.full_messages.each do |err| %>
        <li><%= err %></li>
      <% end %>
  </ul>
  <% end %>
  <tr>
    <td><%=t.label("Name : ")%></td>
    <td><%=t.text_field :name %></td>
  </tr>
    <tr>
      <td><%=t.label("Title : ")%></td>
      <td><%=t.text_field :title %></td>
    </tr>
    <tr>
      <td><%=t.label("Content : ")%></td>
      <td><%=t.text_area :content %></td>
    </tr>
      <tr>
      <td><%=t.submit %></td>
    </tr>

<%end%>

</table>

<%= link_to "Back", posts_path %>
